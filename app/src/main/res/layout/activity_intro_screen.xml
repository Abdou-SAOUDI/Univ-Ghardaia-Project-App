<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="12dp"
	tools:context=".IntroScreenActivity">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<View android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1" />
		<Button android:id="@+id/splash_skip_Btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:paddingVertical="4dp"
			android:text="@string/skip_btn_text" />
	</LinearLayout>

	<FrameLayout android:id="@+id/SplashFrameLayout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView android:id="@+id/splash_circle_1"
			android:layout_width="16dp"
			android:layout_height="match_parent"
			android:layout_marginHorizontal="4dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="@string/content_description"
			android:padding="0dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_filled_circle" />
		<ImageView android:id="@+id/splash_circle_2"
			android:layout_width="16dp"
			android:layout_height="match_parent"
			android:layout_marginHorizontal="4dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="@string/content_description"
			android:padding="0dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_outline_circle" />
		<ImageView android:id="@+id/splash_circle_3"
			android:layout_width="16dp"
			android:layout_height="match_parent"
			android:layout_marginHorizontal="4dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="@string/content_description"
			android:padding="0dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_outline_circle" />
		<ImageView android:id="@+id/splash_circle_4"
			android:layout_width="16dp"
			android:layout_height="match_parent"
			android:layout_marginHorizontal="4dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="@string/content_description"
			android:padding="0dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_outline_circle" />
		<View android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" />
		<Button android:id="@+id/splash_next_Btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/round_button"
			android:padding="4dp"
			android:text="@string/next_btn_text" />
	</LinearLayout>
</LinearLayout>